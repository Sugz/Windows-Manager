<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:vm="clr-namespace:WindowsManager.ViewModels">

    <vm:ViewModelLocator x:Key="Locator"/>

    <ContextMenu x:Key="TaskbarContextMenu" x:Shared="false">
        <MenuItem Header="Show screens splitters" Command="{Binding ShowSplitWindowsCommand}"/>
        <Separator />
        <MenuItem Header="Exit" Command="{Binding ExitAppCommand}"/>
    </ContextMenu>


    <tb:TaskbarIcon x:Key="TaskbarIcon"
                    IconSource="/Resources/Icons/WindowsManager_Icon.ico"
                    ToolTipText="Windows Manager"
                    DataContext="{Binding Main, Source={StaticResource Locator}}"
                    ContextMenu="{StaticResource TaskbarContextMenu}"/>

</ResourceDictionary>